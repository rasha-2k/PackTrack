RewriteEngine On

RewriteBase /

ErrorDocument 404 /public/views/errors/404.html
ErrorDocument 403 /public/views/errors/403.html
ErrorDocument 500 /public/views/errors/500.html

<Files "/public/views/errors/404.html">
    Require all granted
</Files>

<Files "/public/views/errors/403.html">
    Require all granted
</Files>

<Files "/public/views/errors/500.html">
    Require all granted
</Files>

<FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico)$">
    Require all granted
</FilesMatch>

